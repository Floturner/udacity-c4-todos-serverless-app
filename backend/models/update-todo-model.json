{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Update Todo",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3
        },
        "dueDate": {
            "type": "string",
            "format": "date"
        },
        "done": {
            "type": "boolean"
        }
    },
    "required": ["name", "dueDate", "done"],
    "additionalProperties": false
}
